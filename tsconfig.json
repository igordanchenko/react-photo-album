{
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "target": "ES2018",
        "module": "ESNext",
        "jsx": "react-jsx",
        "noEmit": true,
        "declaration": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    }
}
