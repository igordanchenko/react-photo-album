{
  "exclude": ["examples"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2020"],
    "noEmit": true,
    "declaration": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  }
}
